{
	"name": "advanced-vscode-formatter",
	"displayName": "Advanced Formatter",
	"description": "Allows configuring advanced code formatting options for each language.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.75.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:javascript",
		"onCommand:myFormatter.applyFormatting"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "myFormatter.applyFormatting",
				"title": "Apply Advanced Formatting"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Advanced Formatter",
			"properties": {
				"advancedFormatter.javascript.beforeParentheses.functionDeclaration": {
					"type": "boolean",
					"default": false,
					"description": "Insert space before function declaration parentheses (JS)."
				},
				"advancedFormatter.javascript.beforeParentheses.functionCall": {
					"type": "boolean",
					"default": false,
					"description": "Insert space before function call parentheses (JS)."
				},
				"advancedFormatter.javascript.beforeParentheses.if": {
					"type": "boolean",
					"default": true,
					"description": "Insert space before 'if' parentheses (JS)."
				},
				"advancedFormatter.javascript.beforeParentheses.for": {
					"type": "boolean",
					"default": true,
					"description": "Insert space before 'for' parentheses (JS)."
				},
				"advancedFormatter.javascript.aroundOperators.assignment": {
					"type": "boolean",
					"default": true,
					"description": "Put spaces around assignment operators (e.g. =, +=, etc.) in JS."
				},
				"advancedFormatter.javascript.aroundOperators.logical": {
					"type": "boolean",
					"default": true,
					"description": "Put spaces around logical operators (&&, ||) in JS."
				}
			}
		}
	},
	"scripts": {
		"compile": "tsc -p ./"
	},
	"devDependencies": {
		"typescript": "^4.0.0",
		"@types/vscode": "^1.75.0",
		"@types/node": "^14.0.0"
	}
}